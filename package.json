{
  "name": "free-board",
  "version": "1.0.0",
  "description": "free source internet board",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "watch-server": "nodemon -e js,jsx,html index.js",
    "watch-client": "watchify -v --extension=.jsx browser.js -o static/js/index.js",
    "watch": "npm run watch-server & npm run watch-client",
    "test": "tape test/*",
    "deploy": "npm install"
  },
  "keywords": [
    "board",
    "forum",
    "discussion",
    "webapp"
  ],
  "author": "Joaquin Oltra",
  "license": "GPL",
  "devDependencies": {
    "node-jsx": "^0.12.0",
    "reactify": "^0.17.1",
    "tape": "^3.0.3"
  },
  "dependencies": {
    "async": "^0.9.0",
    "body": "^4.5.0",
    "browserify": "^6.3.3",
    "csrf": "^2.0.2",
    "ecstatic": "^0.5.6",
    "highlight.js": "^8.4.0",
    "hyperglue": "^1.3.3",
    "level": "^0.18.0",
    "mach": "^1.0.0-rc2",
    "react": "^0.12.1",
    "react-router": "^0.11.2",
    "redirecter": "^0.2.3",
    "remarkable": "^1.4.1",
    "routes": "^2.0.0",
    "send-data": "^3.3.3",
    "vague-time": "^1.1.0",
    "watchify": "^2.1.1",
    "when": "^3.6.3"
  },
  "browser": "./browser.js",
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "es6": true
        }
      ]
    ]
  }
}
